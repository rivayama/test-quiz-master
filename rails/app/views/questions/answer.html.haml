.container

  -if @question.is_correct?(@submission)
    .alert.alert-success
      %strong Well done!
      Your answer is correct.

  -else
    .alert.alert-danger
      %strong Uh-oh,
      wrong answer...

  .well

    %dl.dl-horizontal
      %dt Question
      %dd= markdown(@question.question)

      %dt Your Answer
      %dd= @submission

    .text-center
      = link_to "Try again", question_path(@question), class: 'btn btn-default'

  = link_to "Back to list", root_path
